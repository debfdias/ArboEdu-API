         <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.11/jquery.mask.min.js"></script>
         <div class="container">
            <div class="row">
               <div class="col-md-12">
                  <h3>Cadastro Asinha</h3>
                  <form id="signupform" class="form-horizontal" role="form" method="post" action="/cadastro/asinha">
                     </br>
                     <div class="row">
                        <div class="col-md-6">
                           <label>Nome</label>
                           <input type="text" required class="form-control" id="name" name="name" placeholder="Nome">
                        </div>
                        <div class="col-md-6">
                           <label>CPF</label>
                           <input type="text" required class="form-control" name="cpf" id="cpf" placeholder="CPF">
                           <script type="text/javascript">
                              $("#cpf").mask("000.000.000-00");
                           </script>
                        </div>
                     </div>
                     </br>
                     <div class="row">
                        <div class="col-md-6">
                           <label>Escola</label>
                           <select class="form-control" id="sel1" required name="schoolId">
                              <% for(var i=0; i < data_school.length; i++) { %>
                              <option value=<%= data_school[i].id %>><%= data_school[i].name %></option>
                              <% } %>
                           </select>
                        </div>
                        <div class="col-md-6">
                           <label>Distrito</label>
                           <select class="form-control" id="sel2" required name="district">
                              <% for(var i=0; i < data_district.length; i++) { %>
                              <option value=<%= data_district[i].id %>><%= data_district[i].name %></option>
                              <% } %>
                           </select>
                        </div>
                     </div>
                     </br>
                     <div class="row">
                        <div class="col-md-6">
                           <label>E-mail</label>
                           <input type="text" required class="form-control" id="email" name="email" placeholder="Email">
                        </div>
                        <div class="col-md-6">
                           <label>Confirmar E-mail</label>
                           <input type="text" required class="form-control" id="confirm_email" name="confirm_email" placeholder="Repita o Email">
                        </div>
                     </div>
                     </br>
                     <div class="row">
                        <div class="col-md-6">
                           <label>Senha</label>
                           <input type="text" required class="form-control" name="password" placeholder="Senha" minlength="3">
                        </div>
                        <div class="col-md-6">
                          <label>Confimar Senha</label>
                          <input type="text" required class="form-control" name="confirm" placeholder="Repita a senha" minlength="3">
                        </div>
                     </div>
                     </br>
                     <div class="row">
                        <div class="col-md-6">
                          <label>Telefone</label>
                          <input type="text" required class="form-control " name="phone" id="phone" placeholder="Telefone" >
                          <script type="text/javascript">
                            $("#phone").mask("(00) 00000-0000");
                          </script>
                        </div>
                     </div>
                     <hr>
                     </br>
                     <label class="col-md-12 text-center">
                        <h4>Endereço</h4>
                     </label>
                     <div class="row">
                        <div class="col-md-6">
                           <label>Cep</label>
                           <input name="address" required type="text" id="cep" value="" class="form-control" placeholder="Cep" maxlength="9" /><br />
                           <script type="text/javascript">
                              $("#cep").mask("99.999-999");
                           </script>
                        </div>
                        <div class="col-md-6">
                           <label>Rua</label>
                           <input name="rua" required type="text" id="rua" class="form-control" placeholder="Rua" /><br />
                        </div>
                     </div>
                     </br>
                     <div class="row">
                        <div class="col-md-6">
                           <label>Bairro</label>
                           <input name="bairro" required type="text" id="bairro" class="form-control" placeholder="Bairro">
                        </div>
                        <div class="col-md-6">
                           <label>Cidade</label>
                           <input name="cidade" required type="text" id="cidade" class="form-control" placeholder="Cidade">
                        </div>
                     </div>
                     </br>
                     <div class="row">
                        <div class="col-md-6">
                           <label>Número</label>
                           <input name="numero" required type="text" id="numero" class="form-control" placeholder="Numero" maxlength="5">
                        </div>
                     </div>
                     <hr>
                     </br>
                     </br>
                     <hr>
                     <div class="row">
                        <div class="col-md-3">
                           <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Cadastrar</button>
                        </div>
                     </div>
                  </form>
               </div>
            </div>
