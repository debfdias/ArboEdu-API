   <body id="page-top">
      <!-- Navigation -->
      <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
         <div class="container">
            <h3> Zika Web </h3>
            <div class="collapse navbar-collapse" id="navbarResponsive">
               <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                     <h5><a id="signinlink" href="/">Entrar</a>
            </div>
            </h5>
            </li>            
            </ul>
         </div>
         </div>
      </nav>
      <!-- Fim Navigation -->
      <!-- Cadastro -->
      <section class="cadastro" id="cadastro">
         <div class="container">
         <div class="row">
            <div class="col-lg-8 my-auto">
               <div class="container-fluid">
                  <div class="row">
                     <div class="col-lg-12">
                        <div class="feature-item">
                           <h3>CADASTRAR DESAFIO</h3>
                           <div style="padding-top:30px" class="panel-body" >
                              <form id="signupform" class="form-horizontal" role="form" method="post" action="/desafio/cadastro">
                                 <div class="form-group">
                                    <label for="name" class="col-md-3 control-label">Nome</label>
                                    <div class="col-md-9">
                                       <input type="text" required class="form-control" name="name" placeholder="Nome">
                                    </div>
                                 </div>
                                 <div class="form-group">
                                    <label for="description" class="col-md-3 control-label">Descrição</label>
                                    <div class="col-md-9">
                                       <textarea required class="form-control" rows="5" cols="40" name="description" placeholder="Descrição"></textarea>
                                    </div>
                                 </div>
                                 <div class="form-group">
                                    <label for="description" class="col-md-3 control-label">ATIVIDADES</label>
                                    <select multiple id="acts" name="acts" >
                                       <% for(var i=0; i < data.length; i++) { %>
                                       <option value=<%= data[i].id %>><%= data[i].name %> (<%= data[i].points %> pontos)</option>
                                       <% } %>
                                    </select>
                                    <script>
                                       var select = document.getElementById('acts');
                                       multi( select, {search_placeholder: 'Buscar...'});
                                       
                                       
                                    </script>
                                    <table border="1" cellpadding="7" cellspacing="7">
                                       <tr>
                                          <th>Nome</th>
                                          <th>Descrição</th>
                                          <th>Pontos</th>
                                       </tr>
                                       <% if(data.length){ 
                                          for(var i = 0;i < data.length;i++) { %>
                                       <tr>
                                          <td><%=data[i].name%></td>
                                          <td><%=data[i].description%></td>
                                          <td><%=data[i].points%></td>
                                          <td>
                                             <a class="a-inside edit" href="../sistema/edit/%>">Incluir</a>
                                          </td>
                                          <td>
                                             <a class="a-inside add" href="../atividade/edit/<%=data[i].id%>">Editar</a>
                                          </td>
                                          <td>  
                                             <a class="a-inside delete" href="../atividade/delete/<%=data[i].id%>">Delete</a>
                                          </td>
                                       </tr>
                                       <% }
                                          }else{ %>
                                       <tr>
                                          <td colspan="3">sem atividades</td>
                                       </tr>
                                       <% } %>
                                    </table>
                                    </br>
                                    <a class="a-inside edit" href="../../atividade/cadastro">Adicionar atividade</a>
                                 </div>
                                 <div class="form-group">
                                    <div class="col-md-offset-3 col-md-9">
                                       <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Salvar</button>
                                    </div>
                                 </div>
                              </form>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <!-- Fim Cadastro-->
