      <!-- Custom styles for this template -->
      <link rel="stylesheet" type="text/css" href="../css/new-age.min.css">
   </head>
   <body id="page-top">
      <!-- Navigation -->
      <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
         <div class="container">
            <h3> Zika Web </h3>
            <div class="collapse navbar-collapse" id="navbarResponsive">
               <ul class="navbar-nav ml-auto">
                  <li class="nav-item">
                     <h5><a id="signinlink" href="/">Entrar</a>
            </div>
            </h5>
            </li>            
            </ul>
         </div>
         </div>
      </nav>
      <!-- Fim Navigation -->
      <!-- Cadastro -->
      <section class="cadastro" id="cadastro">
         <div class="container">
            <div class="row">
               <div class="col-lg-8 my-auto">
                  <div class="container-fluid">
                     <div class="row">
                        <div class="col-lg-12">
                           <div class="feature-item">
                              <h3>ESCOLA PAINEL</h3>
                              </br> 
                              <h5>Dados gerais</h5>
                              <div style="padding-top:30px" class="panel-body" >
                                 <form id="signupform" class="form-horizontal" role="form" method="" action="">
                                    <div class="form-group">
                                       <label for="name" class="col-md-3 control-label">Nome</label>
                                       <div class="col-md-9">
                                          <%= user[0].school_name %>
                                       </div>
                                    </div>
                                    <div class="form-group">
                                       <label for="token" class="col-md-3 control-label">Token</label>
                                       <div class="col-md-9">
                                          <%= user[0].token %>
                                       </div>
                                    </div>
                                    <div class="form-group">
                                       <label for="num_st" class="col-md-9 control-label">Número de estudantes</label>
                                       <div class="col-md-9">
                                          <%= user[0].num_students %>
                                       </div>
                                    </div>
                                    <div class="form-group">
                                       <label for="num_t" class="col-md-9 control-label">Número de professores</label>
                                       <div class="col-md-9">
                                          <%= user[0].num_teachers %>
                                       </div>
                                    </div>
                                    <div class="form-group">
                                       <label for="phone" class="col-md-3 control-label">Telefone de contato</label>
                                       <div class="col-md-9">
                                          <%= user[0].school_phone %>
                                       </div>
                                    </div>
                                    <div class="form-group">
                                       <label for="district" class="col-md-3 control-label">Distrito</label>
                                       <div class="col-md-9">
                                          <%= user[0].district_id %>
                                       </div>
                                    </div>
                                 </form>
                                 <td>
                                    <a class="a-inside add" href="../escola/edit/<%=user[0].school_id%>">Editar</a>
                                 </td>
                              </div>
                           </div>
                           </br> 
                           <h5>Patrono</h5>
                           <div style="padding-top:30px" class="panel-body" >
                              <% if(patrono.length){ %>
                              Selecione um patrono entre os professores:
                              <table border="1" cellpadding="7" cellspacing="10">
                                 <tr>
                                    <th width="100px">No</th>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Telefone</th>
                                    <th>CPF</th>
                                    <th width="150">Matéria</th>
                                    <th>Ação</th>
                                 </tr>
                                 <% if(user.length){ 
                                    for(var i = 0;i < user.length;i++) { %>
                                 <tr>
                                    <td><%=(i+1)%></td>
                                    <td><%=user[i].teacher_name%></td>
                                    <td><%=user[i].email%></td>
                                    <td><%=user[i].phone%></td>
                                    <td><%=user[i].cpf%></td>
                                    <td><%=user[i].subject%></td>
                                    <td>
                                       <a class="a-inside edit" href="../patrono/accept/<%=user[i].teacher_id%>">patrono</a>
                                    </td>
                                 </tr>
                                 <% }
                                    }else{ %>
                                 <tr>
                                    <td colspan="8">Sem professores</td>
                                 </tr>
                                 <% } %>      
                              </table>
                              <form id="signupform" class="form-horizontal" role="form" method="post" action="/patrono/edit/<%=patrono[0].id%>">
                                 <div class="form-group">
                                    <label for="name" class="col-md-3 control-label">Nome</label>
                                    <div class="col-md-9">
                                       <input type="text" required class="form-control" name="name" value="<%=patrono[0].name%>">
                                    </div>
                                 </div>
                                 <div class="form-group">
                                    <label for="description" class="col-md-3 control-label">Descrição</label>
                                    <div class="col-md-9">
                                       <input type="text" required class="form-control" name="description" value="<%=patrono[0].description%>">
                                    </div>
                                 </div>
                                 <div class="form-group">
                                    <label for="msg" class="col-md-9 control-label">Mensagem do patrono</label>
                                    <div class="col-md-9">
                                       <input type="text" required class="form-control" name="message" value="<%=patrono[0].message%>">
                                    </div>
                                 </div>
                                 <div class="form-group">
                                    <label for="img" class="col-md-3 control-label">Imagem</label>
                                    <div class="col-md-9">
                                    </div>
                                 </div>
                                 <div class="form-group">
                                    <div class="col-md-offset-3 col-md-9">
                                       <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Salvar</button>
                                    </div>
                                 </div>
                              </form>
                              <% 
                                 }else{ %>
                              Selecione um patrono entre os professores:
                              <table border="1" cellpadding="7" cellspacing="10">
                                 <tr>
                                    <th width="100px">No</th>
                                    <th>Nome</th>
                                    <th>Email</th>
                                    <th>Telefone</th>
                                    <th>CPF</th>
                                    <th width="150">Matéria</th>
                                    <th>Ação</th>
                                 </tr>
                                 <% if(user.length){ 
                                    for(var i = 0;i < user.length;i++) { %>
                                 <tr>
                                    <td><%=(i+1)%></td>
                                    <td><%=user[i].teacher_name%></td>
                                    <td><%=user[i].email%></td>
                                    <td><%=user[i].phone%></td>
                                    <td><%=user[i].cpf%></td>
                                    <td><%=user[i].subject%></td>
                                    <td>
                                       <a class="a-inside edit" href="../patrono/accept/<%=user[i].teacher_id%>">patrono</a>
                                    </td>
                                 </tr>
                                 <% }
                                    }else{ %>
                                 <tr>
                                    <td colspan="8">Sem patrono</td>
                                 </tr>
                                 <% } %>      
                              </table>
                              <form id="signupform" class="form-horizontal" role="form" method="post" action="/patrono/cadastro">
                                 <div class="form-group">
                                    <label for="name" class="col-md-3 control-label">Nome</label>
                                    <div class="col-md-9">
                                       <input type="text" required class="form-control" name="name" placeholder="Nome">
                                    </div>
                                 </div>
                                 <div class="form-group">
                                    <label for="description" class="col-md-3 control-label">Description</label>
                                    <div class="col-md-9">
                                       <input type="text" required class="form-control" name="description" placeholder="Descrição">
                                    </div>
                                 </div>
                                 <div class="form-group">
                                    <label for="msg" class="col-md-9 control-label">Mensagem do patrono</label>
                                    <div class="col-md-9">
                                       <input type="text" required class="form-control" name="message" placeholder="Mensagem">
                                    </div>
                                 </div>
                                 <div class="form-group">
                                    <div class="col-md-offset-3 col-md-9">
                                       <button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i>Cadastrar patrono</button>
                                    </div>
                                 </div>
                              </form>
                              <% } %> 
                           </div>
                        </div>
                        </br>
                        <a class="btn btn-info" href="../sistema">voltar</a>
                     </div>
                  </div>
               </div>
            </div>
         </div>
      </section>
      <!-- Fim Cadastro-->
      <footer>
         <div class="container">
            <p>&copy; Your Website 2018. All Rights Reserved.</p>
            <ul class="list-inline">
               <li class="list-inline-item">
                  <a href="#">Privacy</a>
               </li>
               <li class="list-inline-item">
                  <a href="#">Terms</a>
               </li>
               <li class="list-inline-item">
                  <a href="#">FAQ</a>
               </li>
            </ul>
         </div>
      </footer>
      <!-- Bootstrap core JavaScript -->
      <script type="text/js" src="vendor/jquery/jquery.min.js"></script>
      <script type="text/js" src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
      <!-- Plugin JavaScript -->
      <script type="text/js" src="../vendor/jquery-easing/jquery.easing.min.js"></script>
      <!-- Custom scripts for this template -->
      <script type="text/js"src="../js/new-age.min.js"></script>
   </body>
</html>